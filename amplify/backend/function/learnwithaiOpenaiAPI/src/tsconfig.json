{
  "compilerOptions": {
    "lib": ["dom", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "rootDir": ".",
  },
  "include": [".", "./lib/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}